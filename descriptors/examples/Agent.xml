<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Agent" property="unique"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Agent" protocol="rmi"/>
		<mapping>
			<map virtualNode="Agent">
				<jvmSet>
					<currentJVM protocol="rmi"/>
				</jvmSet>
			</map>
		</mapping>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
