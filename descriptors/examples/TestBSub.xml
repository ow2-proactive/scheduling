	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Dispatcher" property="unique_singleAO"/>
			<virtualNode name="Renderer"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Dispatcher" protocol="rmi"/>
		<mapping>
			<map virtualNode="Dispatcher">
				<jvmSet>
					<currentJVM protocol="rmi"/>
				</jvmSet>
			</map>
			<map virtualNode="Renderer">
				<jvmSet>
					<vmName value="jvmClusterInria"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="jvmClusterInria">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="rloginInriaCluster"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<policyFile>
						<absolutePath type="absolute" value="/net/home/rquilici/ProActive/scripts/unix/proactive.java.policy"/>
					</policyFile>
				</jvmProcess>
			</processDefinition>
			<processDefinition id="linuxJVM1">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<classpath>
						<absolutePath type="absolute" value="/net/home/rquilici/ProActive/classes"/>
					</classpath>
					<javaPath>
						<absolutePath type="absolute" value="/usr/local/jdk1.4.0/bin/java"/>
					</javaPath>
					<policyFile>
						<absolutePath type="absolute" value="/net/home/rquilici/ProActive/scripts/unix/proactive.java.policy"/>
					</policyFile>
				</jvmProcess>
			</processDefinition>
			<processDefinition id="bsubInriaCluster">
				<bsubProcess class="org.objectweb.proactive.core.process.lsf.LSFBSubProcess">
					<processReference refid="linuxJVM1"/>
					<bsubOption>
						<processor>4</processor>
						<scriptPath>
							<absolutePath type="absolute" value="/net/home/rquilici/ProActive/scripts/unix/cluster/startRuntime.sh"/>
						</scriptPath>
					</bsubOption>
				</bsubProcess>
			</processDefinition>
			<processDefinition id="rloginInriaCluster">
				<rloginProcess class="org.objectweb.proactive.core.process.lsf.RLoginProcess" hostname="cluster.inria.fr">
					<processReference refid="bsubInriaCluster"/>
				</rloginProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
