<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/proactive/schema/DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="p2pvn" property="multiple"  />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="p2pvn">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<acquisition>
					<serviceReference refid="p2plookup"/>
				</acquisition>
			</jvm>
			<jvm name="Jvm2">
				<acquisition>
					<serviceReference refid="rmiLookup"></serviceReference>
				</acquisition>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
	<processes>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
  </jvmProcess>
			</processDefinition>
			</processes>
		<services>
			<serviceDefinition id="p2plookup">
				<P2PLookup nodeNumber="2" timeout="70000" lookupFrequence="5000">
					<peerSet>
						<peer>localhost</peer>
					</peerSet>
				</P2PLookup>
			</serviceDefinition>
			<serviceDefinition id="rmiLookup">
				<RMIRegistryLookup url="//localhost/PA_JVM1"></RMIRegistryLookup>
			</serviceDefinition>
		</services>
	</infrastructure>
</ProActiveDescriptor>
