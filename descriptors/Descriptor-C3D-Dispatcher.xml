<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/proactive/schema/3.2/DescriptorSchema.xsd">
	<!-- <security file="../../descriptors/security/c3dPolicy.xml"></security> -->
	
	<mainDefinition id="main" class="org.objectweb.proactive.examples.c3d.C3DDispatcher">
		<mapToVirtualNode value="main-dispatcher"/>
	</mainDefinition>
	
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="main-dispatcher"/>
			<virtualNode name="Dispatcher" property="unique_singleAO"/>
			<virtualNode name="Renderer"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Dispatcher"/> 
		<mapping>
			<map virtualNode="main-dispatcher">
					<jvmSet>
						<vmName value="JvmDispatch"/>
					</jvmSet>
			</map>
			<map virtualNode="Dispatcher">
				<jvmSet>
					<currentJVM/>
				</jvmSet>
			</map>
			<map virtualNode="Renderer">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
					<vmName value="Jvm3"/>
					<vmName value="Jvm4"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="JvmDispatch">
				<creation>
					<processReference refid="JVMDispatcher"/>
				</creation>
			</jvm>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm3">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm4">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="JVMDispatcher">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
				</jvmProcess>
			</processDefinition>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"></jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
