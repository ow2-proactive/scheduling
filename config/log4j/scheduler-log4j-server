#GCM deployment loggers in RMDEvFileAppender
#log4j.logger.proactive.deployment = INFO,RMDevFileAppender
#log4j.logger.proactive.deployment.log = INFO,RMDevFileAppender
#log4j.logger.proactive.deployment.process = INFO,RMDevFileAppender

# Hibernate logger
log4j.additivity.org.hibernate=false
log4j.logger.org.hibernate=INFO,SchedulerDevHibFileAppender

# File appender for Administrator logging level (FILE1)
log4j.appender.SchedulerFileAppender=org.apache.log4j.RollingFileAppender
log4j.appender.SchedulerFileAppender.File=${pa.scheduler.home}/.logs/Scheduler.log
log4j.appender.SchedulerFileAppender.MaxFileSize=10MB
log4j.appender.SchedulerFileAppender.MaxBackupIndex=5
log4j.appender.SchedulerFileAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.SchedulerFileAppender.layout.ConversionPattern=[%-1p %d{ISO8601}] %m%n

# File appender for verbose developer logging level (FILE2)
log4j.appender.SchedulerDevFileAppender=org.apache.log4j.RollingFileAppender
log4j.appender.SchedulerDevFileAppender.File=${pa.scheduler.home}/.logs/SchedulerDev.log
log4j.appender.SchedulerDevFileAppender.MaxFileSize=10MB
log4j.appender.SchedulerDevFileAppender.MaxBackupIndex=5
log4j.appender.SchedulerDevFileAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.SchedulerDevFileAppender.layout.ConversionPattern=[%-1p %d{ISO8601}] [SCHED.%C{1}.%M] %m%n

# File appender for verbose developer logging level (FILE3)
#log4j.appender.RMDevFileAppender=org.apache.log4j.RollingFileAppender
#log4j.appender.RMDevFileAppender.File=${pa.rm.home}/.logs/RM.log
#log4j.appender.RMDevFileAppender.MaxFileSize=10MB
