# This file represents the log4j config file for Scheduler and Resource Manager.
# It is given as property in the env.sh or init.bat script

# The default logging level is INFO
# The root logger logs in the ${pa.scheduler.home}/.logs/Scheduler[Dev].log file

log4j.rootLogger=INFO,SchedulerDevFileAppender

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.scheduler=false
log4j.additivity.proactive.scheduler.dev=false
log4j.additivity.proactive.scheduler.dev.admin=true
# define SCHEDULER loggers
log4j.logger.proactive.scheduler.dev=INFO,SchedulerDevFileAppender
log4j.logger.proactive.scheduler.dev.admin=INFO,SchedulerFileAppender
log4j.logger.proactive.scheduler.dev.admin.consol=INFO,CONSOLE
