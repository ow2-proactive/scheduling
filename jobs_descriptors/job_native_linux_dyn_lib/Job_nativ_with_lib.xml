<?xml version="1.0" encoding="UTF-8"?>
<job xmlns="urn:proactive:jobdescriptor:0.91" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:jobdescriptor:0.91 http://proactive.inria.fr/schemas/jobdescriptor/0.91/schedulerjob.xsd"
	id="job_nativ_with_lib" priority="normal" cancelOnError="false"
	logFile="${WORK_DIR}/native_exe_lib.log" >
	<description>Will execute a native C task with dynamic library dependency</description>
	<variables>
		<variable name="HOME" value="/user/gsigety/home"/>
		<variable name="WORK_DIR" value="${HOME}/scheduler_workspace/Scheduler/jobs_descriptors/job_native_linux_dyn_lib"/>		
	</variables>
	<taskFlow>
		<task id="Native_task_with_lib" preciousResult="true">
			<!-- Task human description -->
			<description>Will display 10 dots every 1s</description>
			<nativeExecutable>
				<staticCommand
					value="${WORK_DIR}/launcher.sh">
					<arguments>
						<argument value="${WORK_DIR}/native_exec"/>
						<argument value="1"/>
					</arguments>
				</staticCommand>
			</nativeExecutable>
		</task>
	</taskFlow>
</job>
