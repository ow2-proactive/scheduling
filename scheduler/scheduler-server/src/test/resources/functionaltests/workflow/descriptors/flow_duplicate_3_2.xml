<?xml version="1.0" encoding="UTF-8"?>
<job xmlns="urn:proactive:jobdescriptor:dev" 
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="urn:proactive:jobdescriptor:dev ../../src/scheduler/src/org/ow2/proactive/scheduler/common/xml/schemas/jobdescriptor/dev/schedulerjob.xsd"
     name="1432" priority="low" projectName="sched" cancelJobOnError="true">
  <taskFlow>

    <task name="A">
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
      <controlFlow block="none" >
        <replicate>
          <script>
            <code language="javascript">
              // <![CDATA[
              runs = 3;
              // ]]>
            </code>
          </script>
        </replicate>
      </controlFlow>
    </task>

    <task name="B">
      <depends>
        <task ref ="A" />
      </depends>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
      <controlFlow block="start" >
        <replicate>
          <script>
            <code language="javascript">
              // <![CDATA[
              var r = parseInt(variables.get('pas.task.replication'));
              if (r === 0) {
              	runs = 3;
              } else if (r === 1) {
                runs = 1;
              } else {
                runs = 2;
              }
              // ]]>
            </code>
          </script>
        </replicate>
      </controlFlow>
    </task>

    <task name="C">
      <depends>
        <task ref ="B" />
      </depends>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
   	  <controlFlow block="start" />
    </task>

    <task name="D">
      <depends>
        <task ref ="C" />
      </depends>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
      <controlFlow block="end" />
    </task>

    <task name="E">
      <depends>
        <task ref ="D" />
      </depends>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
       <controlFlow block="end" />
    </task>

    <task name="F">
      <depends>
        <task ref ="E" />
      </depends>
      <javaExecutable class="org.ow2.proactive.scheduler.examples.IncrementJob" />
    </task>

  </taskFlow>
</job>