<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor schemaVersion="3.3"
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Hello" property="multiple" />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Hello" protocol="rmi" />
		<mapping>
			<map virtualNode="Hello">
				<jvmSet>
					<vmName value="Jvm1Toto" />
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="localJVMToto" />
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<jvmParameters>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
				</jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
