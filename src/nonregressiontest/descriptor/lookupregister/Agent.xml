<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/proactive/schema/3.2/DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Agent" property="unique_singleAO"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Agent"/>
		<mapping>
			<map virtualNode="Agent">
				<jvmSet>
					<vmName value="Jvm1"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="linuxJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
