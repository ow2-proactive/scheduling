<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor schemaVersion="3.3"
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Hello" property="multiple" technicalServiceId="toto" />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Hello" protocol="rmi"/>
		<mapping>
			<map virtualNode="Hello">
				<jvmSet>
					<vmName value="Jvm1" />
					<vmName value="Jvm2" />
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="localJVM" />
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="localJVM" />
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
				</jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
   <technicalServices>
     <technicalServiceDefinition id="toto" class="org.objectweb.proactive.benchmarks.timit.util.service.TimItTechnicalService">
      <arg name="timitActivation" value="all"/>
      <arg name="reduceResults" value="true"/>
      <!-- <arg name="printOutput" value="true"/> -->
     </technicalServiceDefinition>
   </technicalServices>
</ProActiveDescriptor>
