<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schema/gcm/1.0/ExtensionSchemas.xsd	">
		
	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>
	
	<resources>
		<host refid="hLocalhost1-2"/>
		
		<bridge refid="bLocal">
			<group refid="gLocal">
				<host refid="hLocalhost1-4"/>
			</group>
			<host refid="hLocalhost1-1"/>		
		</bridge>
	</resources>

	<infrastructure>
		
		<hosts>
			<host id="hLocalhost1-1" os="unix" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
		
			<host id="hLocalhost1-2" os="unix" hostCapacity="1" vmCapacity="2">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
	
			<host id="hLocalhost1-4" os="unix" hostCapacity="1" vmCapacity="4">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
	
		</hosts>

		<bridges>
			<sshBridge
				id="bLocal"
				hostname="localhost"
				commandOptions="-2" />
				
		</bridges>
		
		<groups>
			<sshGroup id="gLocal" hostList="localhost localhost"/>
		</groups>
	</infrastructure>
</GCMDeployment>