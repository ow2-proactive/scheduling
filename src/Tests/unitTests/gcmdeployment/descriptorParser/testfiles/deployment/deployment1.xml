<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schema/gcm/1.0/ExtensionSchemas.xsd	">
	
	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>
	
	<resources>
		<host refid="schubby" />
	</resources>

	<acquisition>
		<lookup hostList="schubby" type="RMI" />
		<p2p nodesAsked="3">
			<localClient />
			<peerSet>
				<peer>http://localhost</peer>
			</peerSet>
		</p2p>
	</acquisition>

	<infrastructure>
		<hosts>
			<host id="schubby" os="unix" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}" />
			</host>
		</hosts>
	</infrastructure>

</GCMDeployment>
