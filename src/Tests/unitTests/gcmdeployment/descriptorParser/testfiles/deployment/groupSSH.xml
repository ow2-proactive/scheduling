<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schema/gcm/1.0/ExtensionSchemas.xsd	">
	
	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>
	
	<resources>
		<group refid="gINRIA">
			<host refid="hSchubby" />
		</group>
	</resources>

	<infrastructure>
		<hosts>
			<host id="hSchubby" os="unix" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}" />
			</host>
		</hosts>

		<groups>
			<sshGroup id="gINRIA" hostList="schubby cheypa duff" username="cmathieu" />
			<rshGroup id="grINRIA" hostList="schubby cheypa duff" username="cmathieu" />
		</groups>
	</infrastructure>

</GCMDeployment>