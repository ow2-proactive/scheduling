<?xml version="1.0" encoding="UTF-8"?>
<job xmlns="urn:proactive:jobdescriptor:21" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:jobdescriptor:21 ../../src/scheduler/src/org/ow2/proactive/scheduler/common/xml/schemas/jobdescriptor/21/schedulerjob.xsd"
	name="job_nativ" priority="normal" cancelJobOnError="false">
	<variables>
		<!-- pa.scheduler.home is known as java property - ie : start with -Dpa.scheduler.home=value -->
		<variable name="WORK_DIR" value="${pa.scheduler.home}/samples/jobs_descriptors/job_native_linux"/>
	</variables>
	<description>Will execute 2 native C tasks and a java task with diamond dependences</description>
	<taskFlow>
		<task name="task1">
			<!-- Task human description -->
			<description>Will display 10 dots every 1s</description>
			<nativeExecutable>
				<staticCommand
					value="${WORK_DIR}/nativTask">
					<arguments>
						<argument value="1"/>
					</arguments>
				</staticCommand>
			</nativeExecutable>
		</task>
		<task name="task2">
			<!-- Task human description -->
			<description>Will display 10 dots every 2s</description>
			<depends>
				<task ref="task1"/>
			</depends>
			<nativeExecutable>
				<staticCommand
					value="${WORK_DIR}/nativTask">
					<arguments>
						<argument value="2"/>
					</arguments>
				</staticCommand>
			</nativeExecutable>
		</task>
	</taskFlow>
</job>
