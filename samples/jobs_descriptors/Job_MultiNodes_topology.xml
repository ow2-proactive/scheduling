<?xml version="1.0" encoding="UTF-8"?>
<job xmlns="urn:proactive:jobdescriptor:3.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:jobdescriptor:3.2 ../../src/scheduler/src/org/ow2/proactive/scheduler/common/xml/schemas/jobdescriptor/3.2/schedulerjob.xsd"
	name="job_MultiNodes" priority="high">
	<description>
	    A TaskFlow job that will find out the Nth first prime number where N is given as
		argument. It will use the multi-nodes feature to compute it on several node
	</description>
	<taskFlow>
<!-- @snippet-start java_task_multinodes_parallel -->
		<task name="MultiNodesTask">
			<description>Will control the workers in order to find the prime number</description>
			<parallel numberOfNodes="4"/>
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
<!-- @snippet-end java_task_multinodes_parallel -->
		<task name="MultiNodesTask1">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_arbitrary -->
			<parallel numberOfNodes="4">
				<topology>
					<arbitrary/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_arbitrary -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
		<task name="MultiNodesTask2">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_bp -->
			<parallel numberOfNodes="4">
				<topology>
					<bestProximity/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_bp -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>

		<task name="MultiNodesTask3">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_tp -->
			<parallel numberOfNodes="4">
				<topology>
					<thresholdProximity threshold="100"/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_tp -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>

		<task name="MultiNodesTask4">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_sh -->
			<parallel numberOfNodes="4">
				<topology>
					<singleHost/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_sh -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
		<task name="MultiNodesTask5">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_she -->
			<parallel numberOfNodes="4">
				<topology>
					<singleHostExclusive/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_she -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
		<task name="MultiNodesTask6">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_mhe -->
			<parallel numberOfNodes="4">
				<topology>
					<multipleHostsExclusive/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_mhe -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
		<task name="MultiNodesTask7">
			<description>Will control the workers in order to find the prime number</description>
<!-- @snippet-start java_task_multinodes_dhe -->
			<parallel numberOfNodes="4">
				<topology>
					<differentHostsExclusive/>
				</topology>
			</parallel>
<!-- @snippet-end java_task_multinodes_dhe -->
			<javaExecutable
				class="org.ow2.proactive.scheduler.examples.MultiNodeExample">
				<parameters>
					<parameter name="numberToFind" value="100"/>
				</parameters>
			</javaExecutable>
		</task>
	</taskFlow>
</job>
